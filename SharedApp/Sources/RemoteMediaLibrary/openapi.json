    "/api/v1/download/tasks/add": {
      "get": {
        "tags": ["下载管理"],
        "summary": "添加下载任务",
        "operationId": "addDownloadTask",
        "parameters": [
          {
            "name": "magnet",
            "in": "query",
            "required": true,
            "description": "需要添加下载的磁力链接 (需要Url编码)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "任务创建/更新成功，如果失败则返回null",
            "content": {
              "application/json": {
                "schema": {
                  "nullable": true,
                  "$ref": "#/components/schemas/DownloadTask"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/download/tasks/{taskId}/{method}": {
      "get": {
        "tags": ["下载管理"],
        "summary": "控制下载任务",
        "operationId": "controlDownloadTask",
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "required": true,
            "description": "下载任务的ID (BT Hash)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "method",
            "in": "path",
            "required": true,
            "description": "需要进行的操作",
            "schema": {
              "type": "string",
              "enum": ["start", "pause", "delete"]
            }
          },
          {
            "name": "remove",
            "in": "query",
            "description": "删除任务时是否删除对应的视频文件 (仅在 method=delete 时有效)",
            "schema": {
              "type": "integer",
              "enum": [0, 1]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "操作成功，返回任务的最新信息",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DownloadTask"
                }
              }
            }
          }
        }
      }
    },
